<p id="notice"><%= notice %></p>

<h1>Listing Dresses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Country</th>
      <th>State</th>
      <th>City</th>
      <th>Mobile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dresses.each do |dress| %>
      <tr>
        <td><%= dress.name %></td>
        <td><%= dress.quantity %></td>
        <td><%= dress.country %></td>
        <td><%= dress.state %></td>
        <td><%= dress.city %></td>
        <td><%= dress.mobile %></td>
        <td><%= link_to 'Show', dress %></td>
        <td><%= link_to 'Edit', edit_dress_path(dress) %></td>
        <td><%= link_to 'Destroy', dress, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

